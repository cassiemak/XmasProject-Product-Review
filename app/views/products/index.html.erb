<div class="container">
  <div class="row text-center">
    <div class="col-xs-12">
      <h1>All Products</h1>
    </div>

    <div class="col-xs-12 product">
      <% @products.each do |product| %>
        <span class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <%= link_to product do %>
            <%= image_tag "product/neckcushion.jpg", :class => "img-responsive" %>
            <%= product.product_name %>
          <% end %>
        </span>
      <% end %>
    </div>
    
  </div>
</div>


