<div class="container">
  <div class="row">
    <% if current_user %>
      <div class="col-xs-12 welcome-line"> 
        <span class="welcome">Welcome</span>, <%= current_user.email %>
      </div>
  
      <div class="col-xs-12">
        <div class="row">

          <div class="col-xs-2 home">
            <%= link_to "HOME", root_path, :method => "get", :class => "btn btn-default" %>
          </div>
          
          <div class="col-xs-10 login">
                <input type="search" class="form-control search" placeholder="Search...  " />
                <%= link_to "Sign Out", destroy_user_session_path, :method => "delete" , :class => "btn btn-default search-bar" %>
          </div>

    <% else %>
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-12 welcome-line"></div>
          <div class="col-xs-2 home">
            <%= link_to "HOME", root_path, :method => "get", :class => "btn btn-default " %>
          </div>

          <div class="col-xs-10 login">
            <input type="search" class="form-control search search-bar" placeholder="Search...  " />
            <%= link_to "Sign In", new_user_session_path, :method => "get", :class => "btn btn-default search-bar" %>
            <%= link_to "Sign up", new_user_registration_path, :method => "get", :class => "btn btn-default search-bar" %>
          </div>

        </div>
      </div>
    <% end %>

          
      </div>
    </div>
  </div>
</div>